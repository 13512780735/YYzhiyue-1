<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="@drawable/shape_round_group_btn_bg"
    android:layout_marginRight="10dip"
    android:layout_marginLeft="10dip"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.wbteam.YYzhiyue.view.CircleImageView
        android:id="@+id/group_avatar"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="@dimen/padding_normal"
        android:src="@mipmap/group01" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="20dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/group_name"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:text="广州开心群"
            android:gravity="center_vertical"
            android:textColor="@color/font_color1"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_round_group_btn_bg02"
                android:drawableLeft="@mipmap/icon_group_number"
                android:drawablePadding="5dip"
                android:text="1/50"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:paddingTop="4dip"
                android:paddingBottom="4dip"
                android:textSize="@dimen/font_smalll"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/group_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:paddingTop="4dip"
                android:paddingBottom="4dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/shape_round_group_btn_bg01"
                android:drawableLeft="@mipmap/icon_group_distance"
                android:drawablePadding="5dip"
                android:text="0.34km"
                android:textSize="@dimen/font_smalll"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/group_content"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:text="骗子勿进"
            android:gravity="center_vertical"
            android:textColor="@color/font_color1"
            android:layout_weight="1" />
    </LinearLayout>
    <ImageView
        android:id="@+id/group_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="5dip"
        android:layout_gravity="bottom"
        android:background="@mipmap/icon_group_add"/>

</LinearLayout>