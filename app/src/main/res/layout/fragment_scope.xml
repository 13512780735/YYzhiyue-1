<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wbteam.YYzhiyue.ui.mine.ScopeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/shape_round_group_btn_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dip"
            android:text="选择标签" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line"></View>

        <GridView
            android:id="@+id/tag_filter_items_GridView"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="10dip"
            android:layout_weight="1"
            android:horizontalSpacing="10dip"
            android:numColumns="3"
            android:verticalSpacing="10dip"></GridView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line"></View>
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_group_btn_bg05"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:paddingLeft="10dip"
            android:visibility="gone"
            android:paddingRight="10dip"
            android:layout_margin="10dip"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="确定"/>
    </LinearLayout>
</RelativeLayout>
