<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wbteam.YYzhiyue.ui.mine.ScopeActivity">

    <include layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rl_rlPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="定价"
                    android:textColor="@color/login_btn" />

                <EditText
                    android:id="@+id/ed_edPrice"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:textColorHint="@color/font_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="元/小时"
                    android:textColor="@color/font_color" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line"></View>

            <LinearLayout
                android:id="@+id/rl_rlTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="档期"
                    android:textColor="@color/login_btn" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_startTime"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="8:00"
                        android:textColor="@color/login_btn" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_down" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="到"
                    android:textColor="@color/font_color" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_EndTime"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="23:00"
                        android:textColor="@color/login_btn" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_down" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="@color/bg_color"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line"></View>

            <LinearLayout
                android:id="@+id/rl_rlPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="horizontal"
                android:paddingRight="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="手机"
                    android:textColor="@color/login_btn" />

                <EditText
                    android:id="@+id/ed_edPhone"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入手机号"
                    android:textColorHint="@color/font_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="10dip"
                android:gravity="right"
                android:text="同意后才可以查看您的手机号"
                android:textColor="@color/font_color"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line"></View>

            <LinearLayout
                android:id="@+id/rl_rlWeiXin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="微信"
                    android:textColor="@color/login_btn" />

                <EditText
                    android:id="@+id/ed_edWeiXin"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入微信号"
                    android:textColorHint="@color/font_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line"></View>

            <LinearLayout
                android:id="@+id/rl_rlPhone01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="horizontal"
                android:paddingRight="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="联系方式"
                    android:textColor="@color/login_btn" />

                <EditText
                    android:id="@+id/ed_edPhone01"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请选择是否公开手机号作为联系方式"
                    android:textColorHint="@color/font_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="10dip"
                    android:paddingLeft="10dip"
                    android:layout_weight="2">
                    <RadioButton
                        android:id="@+id/radioButton_yes"
                        style="@style/RadioButtonStyles"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:text="是"
                        android:paddingLeft="10dip"
                        android:checked="true"
                        android:layout_weight="1"/>
                    <RadioButton
                        style="@style/RadioButtonStyles"
                        android:id="@+id/radioButton_no"
                        android:layout_width="0dip"
                        android:paddingLeft="10dip"
                        android:layout_height="wrap_content"
                        android:text="否"
                        android:layout_weight="1"/>
                </RadioGroup>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="(约会过期后自动隐藏)"
                    android:textColor="@color/font_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="@color/bg_color"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line"></View>

            <LinearLayout
                android:id="@+id/rl_rlScope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="出租范围"
                    android:textColor="@color/login_btn" />

                <TextView
                    android:id="@+id/tv_tvScope"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableRight="@mipmap/icon_right"
                    android:gravity="right|center_vertical"
                    android:text="设置标签"
                    android:textColor="@color/font_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.wbteam.YYzhiyue.view.MyGridView
                android:id="@+id/RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:numColumns="5"></com.wbteam.YYzhiyue.view.MyGridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line"></View>


            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="@dimen/dip_large"
                android:layout_marginRight="@dimen/dip_large"
                android:layout_marginTop="20dip"
                android:background="@drawable/shape_round_login_btn_bg"
                android:gravity="center"
                android:padding="10dip"
                android:text="保存"
                android:textColor="@color/white" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
