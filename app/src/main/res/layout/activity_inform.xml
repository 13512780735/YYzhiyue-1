<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wbteam.YYzhiyue.ui.neaeby.InformActivity">

    <include layout="@layout/common_toolbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <EditText
            android:id="@+id/title01"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:drawablePadding="10dip"
            android:hint="请输入举报原因"
            android:textColorHint="@color/font_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dip"
        android:layout_marginTop="10dip"
        android:background="@color/white">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@null"
            android:gravity="top"
            android:hint="请填写详细内容，以确定举报能够受理"
            android:padding="10dip"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.wbteam.YYzhiyue.view.RoundImageView
        android:id="@+id/iv_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:src="@mipmap/add_photo" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_large"
        android:layout_marginRight="@dimen/dip_large"
        android:layout_marginTop="40dip"
        android:background="@drawable/shape_round_login_btn_bg"
        android:gravity="center"
        android:padding="10dip"
        android:text="提交"
        android:textColor="@color/white" />

    <TextView
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/tv_content"
        android:text=""
        android:textColor="@color/font_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
