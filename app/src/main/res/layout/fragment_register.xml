<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_reg_bg"
    android:orientation="vertical"
    tools:context="com.wbteam.YYzhiyue.ui.login.RegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_xlarge"
        android:layout_marginRight="@dimen/dip_xlarge"
        android:layout_marginTop="@dimen/dip_xlarge"
        android:background="@drawable/shape_round_edittext_bg"
        android:orientation="horizontal"
        android:padding="8dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:src="@mipmap/icon_phone" />

        <EditText
            android:id="@+id/register_et_phone"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dip"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:textColorHint="@color/font_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_xlarge"
        android:layout_marginRight="@dimen/dip_xlarge"
        android:layout_marginTop="@dimen/dip_xlarge"
        android:background="@drawable/shape_round_edittext_bg"
        android:orientation="horizontal"
        android:padding="8dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:src="@mipmap/icon_password" />

        <EditText
            android:id="@+id/register_et_pwd"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dip"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/font_color"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_xlarge"
        android:layout_marginLeft="@dimen/dip_xlarge"
        android:layout_marginRight="@dimen/dip_xlarge"
        android:orientation="horizontal"
      >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:background="@drawable/shape_round_edittext_bg"
            android:padding="8dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:src="@mipmap/icon_code" />

            <EditText
                android:id="@+id/register_et_code"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="10dip"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textColorHint="@color/font_color"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/send_code_btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_weight="2"
            android:background="@drawable/shape_round_login_btn_bg"
            android:padding="16dip"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_xlarge"
        android:layout_marginRight="@dimen/dip_xlarge"
        android:layout_marginTop="@dimen/dip_xlarge"
        android:background="@drawable/shape_round_edittext_bg"
        android:orientation="horizontal"
        android:padding="8dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:src="@mipmap/icon_invitationcodex" />

        <EditText
            android:id="@+id/register_et_Invitationcode"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10dip"
            android:hint="请输入邀请码，如无可不填"
            android:textColorHint="@color/font_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox01"
            style="@style/mycheckbox1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:layout_marginRight="@dimen/margin_normal"
             />

        <TextView
            android:id="@+id/protocol_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读本协议，并阅读《影缘之约用户协议》"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_xxxlarge"
        android:padding="8dip"
        android:text="注册"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/shape_round_login_btn_bg"
        android:layout_marginRight="@dimen/dip_large"
        android:layout_marginLeft="@dimen/dip_large"/>

</LinearLayout>
