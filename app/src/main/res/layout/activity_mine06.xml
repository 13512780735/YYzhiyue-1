<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context="com.wbteam.YYzhiyue.ui.mine.MineCenter.Mine06Activity">

    <include layout="@layout/common_toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_Income_yesterday"
            android:layout_width="0dip"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:text="昨日收益(元)"
                />

            <TextView
                android:id="@+id/tv_Income_yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_01"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_red"
                android:layout_marginTop="@dimen/dp_10"
                android:text="¥ 0.00" />


        </RelativeLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/line"></View>
        <RelativeLayout
            android:id="@+id/rl_Income_total"
            android:layout_width="0dip"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:text="本周收益(元)"
                />

            <TextView
                android:id="@+id/tv_Income_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_02"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_red"
                android:layout_marginTop="@dimen/dp_10"
                android:text="¥ 0.00" />


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_toatl"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:text="总金额(元)" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="¥ 0.00"
                android:textColor="@color/text_red" />


        </RelativeLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/line"></View>
        <RelativeLayout
            android:id="@+id/rl_withdraw"
            android:layout_width="0dip"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:text="可提现金额(元)"
                />

            <TextView
                android:id="@+id/tv_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv02"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_red"
                android:layout_marginTop="@dimen/dp_10"
                android:text="¥ 0.00" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_confirm"
            android:layout_width="0dip"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:text="待确认金额(元)"
                />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv03"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_red"
                android:layout_marginTop="@dimen/dp_10"
                android:text="¥ 0.00" />


        </RelativeLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/line"></View>
        <RelativeLayout
            android:id="@+id/rl_voucher"
            android:layout_width="0dip"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:text="抵金券金额(元)"
                />

            <TextView
                android:id="@+id/tv_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv04"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_red"
                android:layout_marginTop="@dimen/dp_10"
                android:text="¥ 0.00" />


        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_withdraw01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width40"
        android:layout_marginLeft="@dimen/dip_large"
        android:layout_marginRight="@dimen/dip_large"
        android:layout_marginTop="20dip"
        android:background="@drawable/shape_round_login_btn_bg"
        android:gravity="center"
        android:padding="8dip"
        android:text="提现"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width40"
        android:layout_marginLeft="@dimen/dip_large"
        android:layout_marginRight="@dimen/dip_large"
        android:layout_marginTop="20dip"
        android:background="@drawable/shape_round_btn_bg"
        android:gravity="center"
        android:padding="8dip"
        android:text="充值"
        android:textColor="@color/white" />
</LinearLayout>
