<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wbteam.YYzhiyue.ui.login.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_xlarge"
        android:layout_marginRight="@dimen/dip_xlarge"
        android:layout_marginTop="@dimen/dip_xlarge"
        android:background="@drawable/shape_round_edittext_bg"
        android:orientation="horizontal"
        android:padding="8dip">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:src="@mipmap/icon_phone"/>
        <EditText
            android:id="@+id/login_et_phone"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:drawablePadding="10dip"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:textColorHint="@color/font_color"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_xlarge"
        android:layout_marginRight="@dimen/dip_xlarge"
        android:layout_marginTop="@dimen/dip_xlarge"
        android:background="@drawable/shape_round_edittext_bg"
        android:orientation="horizontal"
        android:padding="8dip">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:src="@mipmap/icon_password"/>
        <EditText
            android:id="@+id/login_et_pwd"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:drawablePadding="10dip"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/font_color"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_forgetpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dip"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/dip_large"
        android:layout_marginTop="10dip"
        android:text="忘记密码？"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_xxxlarge"
        android:layout_marginLeft="@dimen/dip_large"
        android:layout_marginRight="@dimen/dip_large"
        android:layout_marginTop="20dip"
        android:background="@drawable/shape_round_login_btn_bg"
        android:gravity="center"
        android:padding="8dip"
        android:text="登录"
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="使用其他账号登录"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:src="@mipmap/icon_login_wechat" />

        <ImageView
            android:id="@+id/login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:src="@mipmap/icon_login_qq" />

    <ImageView
            android:id="@+id/login_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:src="@mipmap/icon_weibo"
        />

    </LinearLayout>
</LinearLayout>
