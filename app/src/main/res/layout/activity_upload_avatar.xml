<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.wbteam.YYzhiyue.ui.mine.UploadAvatarActivity">

    <include layout="@layout/common_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="在这里，没有真实头像的人"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="是交不到朋友的"
            android:textSize="18sp" />

        <com.wbteam.YYzhiyue.view.CircleImageView
            android:id="@+id/head_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_head1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="上传一张高颜值图像吧"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_pic"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dip_large"
            android:layout_marginRight="@dimen/dip_large"
            android:layout_marginTop="40dip"
            android:background="@drawable/shape_round_login_btn_bg"
            android:gravity="center"
            android:padding="8dip"
            android:text="上传图像"
            android:textColor="@color/white" />

        <!--<TextView-->
            <!--android:id="@+id/tv_video"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="45dp"-->
            <!--android:layout_marginBottom="20dip"-->
            <!--android:layout_marginLeft="@dimen/dip_large"-->
            <!--android:layout_marginRight="@dimen/dip_large"-->
            <!--android:layout_marginTop="20dip"-->
            <!--android:background="@drawable/button_home_bg01"-->
            <!--android:gravity="center"-->
            <!--android:padding="8dip"-->
            <!--android:text="视频认证"-->
            <!--android:textColor="@color/colorAccent" />-->
    </LinearLayout>
</LinearLayout>